<% layout('layouts/boilerPlate') %> 
<div class="row">
  <h1 class="text-center">글 수정</h1>
  <div class="col-6 offset-3">
    <form class="mb-3 validated-form" action="/forums/<%=forums._id%>?_method=PUT" method="POST" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">제목</label>
        <input class="form-control" type="text" id="title" value="<%=forums.title%>" name="forum[title]" required>
        <div class="valid-feedback">유효한 입력입니다.</div>
        <!-- name으로 구분해주는 건 컨텐츠를 그룹화할 수 있는 좋은 방법이다 -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="author">작성자</label>
        <input class="form-control" type="text" id="author" name="forum[author]" value="<%=forums.author%>" required>
        <div class="valid-feedback">유효한 입력입니다.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="img">이미지</label>
        <input class="form-control" value="<%=forums.img%>" type="text" id="img" name="forum[img]">
        <div class="valid-feedback">유효한 입력입니다.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="date">작성일자</label>
        <input class="form-control" type="text" name="forum[date]" id="date" 
        value="<%=new Date().toLocaleDateString()%> <%=new Date().toLocaleTimeString()%>" readonly>
      </div>
      <div class="mb-3">
        <label for="contents" class="form-label">내용</label>
        <textarea name="forum[contents]" class="form-control" id="contents" cols="30" rows="5" required><%=forums.contents%></textarea>
        <div class="valid-feedback">유효한 입력입니다.</div>
      </div>
      <button class="btn btn-success col-12">수정 완료</button>
    </form>
    <a href="/forums/<%=forums._id%>">뒤로</a>
  </div>
</div>


